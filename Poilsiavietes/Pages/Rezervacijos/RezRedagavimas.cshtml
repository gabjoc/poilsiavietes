@page
@model EditModel

@{
    ViewData["Title"] = "Rez redagavimas";
}

<h1>Redaguoti rezervaciją</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="redRezervacija.RezNumeris" />
            <div class="form-group">
                <label asp-for="redRezervacija.Vardas" class="control-label"></label>
                <input asp-for="redRezervacija.Vardas" class="form-control" />
                <span asp-validation-for="redRezervacija.Vardas" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="redRezervacija.Pavarde" class="control-label"></label>
                <input asp-for="redRezervacija.Pavarde" class="form-control" />
                <span asp-validation-for="redRezervacija.Pavarde" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="redRezervacija.TelNumeris" class="control-label"></label>
                <input asp-for="redRezervacija.TelNumeris" class="form-control" />
                <span asp-validation-for="redRezervacija.TelNumeris" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="redRezervacija.ElPastas" class="control-label"></label>
                <input asp-for="redRezervacija.ElPastas" class="form-control" />
                <span asp-validation-for="redRezervacija.ElPastas" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="redRezervacija.ZmoniuSk" class="control-label"></label>
                <input asp-for="redRezervacija.ZmoniuSk" class="form-control" />
                <span asp-validation-for="redRezervacija.ZmoniuSk" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="redRezervacija.YraAugintinis" /> @Html.DisplayNameFor(model => model.redRezervacija.YraAugintinis)
                </label>
            </div>         
            <div class="form-group">
                <label asp-for="redRezervacija.Pradzia" class="control-label"></label>
                <input asp-for="redRezervacija.Pradzia" class="form-control" type="date" min="@DateTime.Now.ToString("yyyy-MM-dd")" />
                <span asp-validation-for="redRezervacija.Pradzia" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="redRezervacija.Pabaiga" class="control-label"></label>
                <input asp-for="redRezervacija.Pabaiga" class="form-control" type="date" min="@DateTime.Now.ToString("yyyy-MM-dd")" />
                <span asp-validation-for="redRezervacija.Pabaiga" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="redRezervacija.Suma" class="control-label"></label>
                <input asp-for="redRezervacija.Suma" class="form-control" />
                <span asp-validation-for="redRezervacija.Suma" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="currentDate">Atnaujintos rezervacijos sukūrimo data</label>
                <input type="text" id="currentDate" name="currentDate" value="@Model.CurrentDate" readonly />
            </div>
            <input type="hidden" asp-for="redRezervacija.Busena" />
            <input type="hidden" asp-for="redRezervacija.Apmoketa" />
            <input type="hidden" asp-for="redRezervacija.FkIdPoilsiaviete" />
            <input type="hidden" asp-for="redRezervacija.FkIdNaudotojas" />

            <br>
            <div class="form-group">
                <input type="submit" value="Išsaugoti pakeitimus" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./RezSarasas">Atgal į sąrašą</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
