            <br>
            <div class="form-group">
                <input type="submit" value="Rezervuoti" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
